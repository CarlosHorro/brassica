= render 'data_tables/tabs'

.lead= model_param.humanize

= back_button

= datatable_tag do
  - model_class = model_param.singularize.camelize.constantize
  - [:table_columns, :count_columns].each do |columns_type|
    - if model_class.respond_to? columns_type
      - model_class.send(columns_type).each do |column|
        - model_name, column_name = extract_column(column)
        %th{ class: "#{column_name}_column" }
          = t("tables.#{model_name}.#{column_name}")

  - if !params[:group] && model_class.ancestors.include?(Annotable)
    %th.annotations
