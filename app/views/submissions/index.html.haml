%ol.breadcrumb
  %li= link_to "Home", root_path
  %li.active Submissions

- if @submissions.present?
  = button_to "Submit new research data", submissions_path, class: 'btn btn-primary', method: 'post'

  %ul.submissions
    - @submissions.each do |submission|
      %li
        = link_to submission.name, submission_path(submission)

        - unless submission.finalized?
          = link_to 'Edit', edit_submission_path(submission), class: 'btn btn-default btn-xs'
          = button_to 'Delete', submission_path(submission), method: :delete, class: 'btn btn-warning btn-xs'
        - else
          %span.label.label-primary Submitted

- else
  .jumbotron
    %p You do no have any data submissions so far
    = button_to "Submit new research data", submissions_path, class: 'btn btn-primary', method: 'post'

