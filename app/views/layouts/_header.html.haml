%header.page-header
  .container
    .row
      .col-xs-6
        = link_to root_path, { class: 'logo' } do
          = image_tag '/images/logo-bip.png', alt: 'Brassica Information Portal'

      .col-xs-6
        %ul.nav.nav-pills.pull-right.header-menu
          - unless user_signed_in?
            %li{ role: 'presentation' }
              = link_to 'Sign in with ORCiD', user_omniauth_authorize_path(:orcid), { class: 'btn btn-default btn-secondary btn-ghost' }

          - else
            %li.dropdown{ role: 'presentation' }
              %a.dropdown-toggle{ data: { toggle: 'dropdown' }, href: '#' }
                = current_user.full_name
                %span.caret

              %ul.dropdown-menu
                %li= link_to 'Submissions', submissions_path
                %li= link_to 'Sign out', sign_out_path

          %li{ role: 'presentation' }
            = link_to 'About', about_path, { class: 'btn btn-default btn-secondary btn-ghost' }
